<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/activity_vertical_margin"
    android:padding="@dimen/activity_vertical_margin"
    android:background="@drawable/egde_layout">

    <TextView
        android:text="Enter Base UUID of Device"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:id="@+id/textUUID_title"
        android:gravity="center"
        android:textColor="@color/buttonColor"
        android:textSize="@dimen/title_size_small"
        android:textStyle="normal|bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/editTextBaseUUID"/>

    <EditText
        android:hint="Enter Service Base UUID To Connect"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textColor="@color/textColor"
        android:id="@+id/editTextBaseUUID"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:layout_below="@+id/textView6"
        android:layout_alignParentStart="true"
        android:textSize="@dimen/text_size"
        android:autoSizeMaxTextSize="@dimen/text_size"
        android:autoSizeMinTextSize="11sp"
        android:autoSizeStepGranularity="1sp"
        android:autoSizeTextType="uniform"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textUUID_title"
        app:layout_constraintBottom_toTopOf="@id/buttonUUID"/>

    <Button
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/curved_button"
        android:id="@+id/buttonUUID"
        android:scaleType="center"
        android:textColor="@color/app_background_white"
        android:textSize="@dimen/button_text"
        android:text="Enter"
        android:contentDescription="@string/speak"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/editTextBaseUUID"
        app:layout_constraintBottom_toBottomOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>